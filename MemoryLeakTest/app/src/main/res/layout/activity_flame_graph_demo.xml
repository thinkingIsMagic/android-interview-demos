<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="24dp">

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="火焰图分析演示"
        android:textSize="22sp"
        android:textStyle="bold"
        android:layout_marginBottom="16dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="火焰图（Flame Graph）使用方法：&#10;&#10;1. 点击按钮触发耗时操作&#10;2. 打开 Android Profiler (View -> Tool Windows -> Profiler)&#10;3. 选择进程，点击 CPU 录制&#10;4. 操作完成后停止录制&#10;5. 查看 Call Chart 或 Flame Chart"
        android:textSize="14sp"
        android:textColor="#666666"
        android:layout_marginBottom="24dp" />

    <TextView
        android:id="@+id/statusText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="点击按钮开始演示"
        android:textSize="16sp"
        android:gravity="center"
        android:padding="16dp"
        android:background="#F5F5F5"
        android:layout_marginBottom="16dp" />

    <Button
        android:id="@+id/btnHeavyTask"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="单个耗时任务（模拟卡顿）"
        android:layout_marginBottom="12dp" />

    <Button
        android:id="@+id/btnMultipleTasks"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="嵌套任务（展示调用栈层级）"
        android:layout_marginBottom="12dp" />

    <Button
        android:id="@+id/btnFinish"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="返回"
        android:backgroundTint="#F44336" />

</LinearLayout>
